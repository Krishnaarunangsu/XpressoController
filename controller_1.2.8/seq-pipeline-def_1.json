{
  "name": "data_sequential_pipeline_1",
  "description": "A pipeline with two sequential steps.",
  "main_func_params": {
    "##dummyfileurl1##": "http://25.io/toau/audio/sample.txt",
	"##dummyfileurl2##": "https://sample-videos.com/text/Sample-text-file-10kb.txt"
  },
  "components": [
    {
      "name": "data_ingestion",
	  "xpresso_reference": "data_ingestion",
      "description": "Downloads data from given url",
      "inputs": [
		{
			"name": "url",
			"type": "LocalPath",
			"description": "Local path of file"
		}
        ],
      "input_values": {
        "##url##": "##dummyfileurl1##"
      },
	  "outputs": [
		  {
			"name": "out_file",
			"type": "LocalPath",
			"description": "Local path of file"
		}
	  ],
      "implementation": {
		"container": {
			"image": "python:3.7-alpine",
			"command": ["wget"],
			"args": [
				{
					"inputValue": "url"
				},
				"-O",
				"/outfile.txt"
			],
			"fileOutputs": {
				"out_file" : "/outfile.txt"
			}
		}
		}
    },
    {
      "name": "data_processing",
	  "xpresso_reference": "data_processing",
      "description": "Explore & Process Data",
      "inputs": [
		  {
			"name": "text1",
			"type": "LocalPath",
			"description": "string to display"
		},
		  {
			"name": "text2",
			"type": "LocalPath",
			"description": "string to display"
		}
	  ],
      "input_values": {"##text1##": "##data_fetch.output##",
	  					"##text2##": "##data_fetch.output##"},
      "implementation": {
		"container": {
			"image": "library/bash:4.4.23",
			"command": ["echo"],
			"args": [
				{
					"inputValue": "text1"
				},
				{
					"inputValue": "text2"
				}
			]
		}
		}
    }
  ],
"after_dependencies": {"data_processing":"data_ingestion"}
}
